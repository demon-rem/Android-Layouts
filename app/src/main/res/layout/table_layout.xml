<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:weightSum="1">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minWidth="440dp"
        android:minHeight="700dp"
        android:orientation="vertical"
        android:weightSum="6"
        tools:ignore="HardcodedText">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center">

            <TextView
                android:onClick="tableCellClicked"
                android:text="Row 1\nColumn 1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#8DAAAAAA"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:onClick="tableCellClicked"
                android:text="Row 2\nColumn 1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_weight="1"
                android:onClick="tableCellClicked"
                android:text="Row 2\nColumn 2"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_weight="1"
                android:onClick="tableCellClicked"
                android:text="Row 2\nColumn 3"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:onClick="tableCellClicked"
                android:text="Row 3\nColumn 1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_weight="1"
                android:onClick="tableCellClicked"
                android:text="Row 3\nColumn 2"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="3"
            android:background="@android:color/white" />

    </TableLayout>

</LinearLayout>